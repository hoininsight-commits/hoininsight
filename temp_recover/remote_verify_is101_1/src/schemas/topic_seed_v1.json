{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Topic Seed V1",
    "description": "Schema for minimal, speakable TOPIC SEEDS formed from clustered factual anchors",
    "type": "object",
    "properties": {
        "seed_id": {
            "type": "string"
        },
        "structural_frames": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "supporting_facts": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "seed_summary": {
            "type": "string"
        },
        "first_seen": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "status": {
            "type": "string",
            "const": "SHADOW_ONLY"
        }
    },
    "required": [
        "seed_id",
        "structural_frames",
        "supporting_facts",
        "seed_summary",
        "first_seen",
        "status"
    ]
}