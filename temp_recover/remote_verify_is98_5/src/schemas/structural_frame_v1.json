{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Structural Frame V1",
    "description": "Schema for structural narrative frames mapped from factual anchors",
    "type": "object",
    "properties": {
        "frame": {
            "type": "string",
            "enum": [
                "CAPITAL_REALLOCATION",
                "POLICY_SHIFT",
                "TECH_INFLECTION",
                "SUPPLY_CHAIN_RECONFIG",
                "REGULATORY_OPTIONALITY",
                "COST_STRUCTURE_CHANGE",
                "DEMAND_REACCELERATION",
                "STRATEGIC_DEPENDENCY"
            ]
        },
        "reason": {
            "type": "string"
        }
    },
    "required": [
        "frame",
        "reason"
    ]
}