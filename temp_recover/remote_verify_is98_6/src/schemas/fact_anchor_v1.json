{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Fact Anchor V1",
    "description": "Schema for raw factual anchors harvested for early topic creation",
    "type": "object",
    "properties": {
        "fact_id": {
            "type": "string"
        },
        "fact_type": {
            "type": "string",
            "enum": [
                "POLICY",
                "BUDGET",
                "FLOW",
                "TECH",
                "REGULATION",
                "EARNINGS"
            ]
        },
        "fact_text": {
            "type": "string"
        },
        "source": {
            "type": "string"
        },
        "published_at": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "entities": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "confidence": {
            "type": "string",
            "const": "RAW"
        }
    },
    "required": [
        "fact_id",
        "fact_type",
        "fact_text",
        "source",
        "published_at",
        "entities",
        "confidence"
    ]
}