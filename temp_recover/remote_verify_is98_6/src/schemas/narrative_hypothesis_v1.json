{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Narrative Hypothesis V1",
    "description": "Schema for factual narrative hypotheses that explain why a topic seed is significant structurally",
    "type": "object",
    "properties": {
        "hypothesis_id": {
            "type": "string"
        },
        "seed_id": {
            "type": "string"
        },
        "hypothesis_text": {
            "type": "string"
        },
        "structural_frames": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "supporting_fact_count": {
            "type": "integer"
        },
        "confidence_level": {
            "type": "string",
            "enum": [
                "LOW",
                "MEDIUM"
            ]
        },
        "status": {
            "type": "string",
            "const": "PRE-NARRATIVE"
        }
    },
    "required": [
        "hypothesis_id",
        "seed_id",
        "hypothesis_text",
        "structural_frames",
        "supporting_fact_count",
        "confidence_level",
        "status"
    ]
}